<body>
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-0"></div>
        <div class="col-lg-6 col-md-6 col-sm-10">
            <div class="card">
                <form action="/login" method="POST">
                    <div class="container">
                        <h3>Login</h3>
                        <h6 class="card-subtitle mb-2 text-muted">
                            Login for existing user
                        </h6>
                        <br/>

                        <input
                                class="input-block-level"
                                type="text"
                                name="username"
                                placeholder="Username"
                        /><br/><br/>
                        <input
                                class="input-block-level"
                                type="password"
                                name="password"
                                placeholder="Password"
                        /><br/><br/>

                        <button
                                class="btn btn-primary btn-lg btn-block"
                                type="Submit"
                        >
                            Submit
                        </button>
                        <br/><br/>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-0"></div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-12 col-sm-push-2">
        <div class="row">
            <div class="col-lg-12">
                <div class="well">
                    <div class="row">
                        <div class="col-lg-12">
                            <p id="account" class="welcome pull-right"></p>
                            <p id="accountBalance" class="welcome pull-left"></p>
                        </div>
                    </div>

                    <div id="inner_container">
                        <div id="loading">Loading...</div>
                        <div id="loaded" class="hidden2">
                            <div id="main">
                                <div id="user-signed-in" class="hidden2">
                                    <div id="user-info">
                                        <div id="phone"></div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <p>
                                        <button class="btn btn-md btn-success" id="sign-out">verified</i></button>
                                    </p>
                                </div>
                                <div id="user-signed-out" class="hidden2">
                                    <div id="firebaseui-spa">
                                        <div id="firebaseui-container"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


